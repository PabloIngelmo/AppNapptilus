<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.view.MainActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/oompaLoompaListRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/textviewNumPage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:paddingBottom="50dp"
        android:paddingTop="22dp"
        tools:listitem="@layout/cover_oompa_loompa"/>

    <Button
        android:id="@+id/buttonPreviousPage"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="50dp"
        android:enabled="false"
        android:textSize="21sp"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:id="@+id/textviewNumPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/buttonPreviousPage"
        app:layout_constraintEnd_toStartOf="@id/buttonNextPage"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="1/20"
        android:textSize="35sp"
        android:layout_marginBottom="15dp"/>

    <Button
        android:id="@+id/buttonNextPage"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="50dp"
        android:textSize="21sp"/>


</androidx.constraintlayout.widget.ConstraintLayout>