<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/viewRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.view.activity.MainActivity">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/oompaLoompaListRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingBottom="65dp"
        tools:listitem="@layout/cover_oompa_loompa"/>

    <Button
        android:id="@+id/buttonFirstPage"
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="15dp"
        android:enabled="false"
        android:textSize="21sp"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/buttonPreviousPage"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/buttonFirstPage"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="15dp"
        android:enabled="false"
        android:textSize="21sp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/textviewNumPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/buttonPreviousPage"
        app:layout_constraintEnd_toStartOf="@id/buttonNextPage"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="1/20"
        android:textColor="@color/purple_500"
        android:textSize="25sp"
        android:layout_marginBottom="18dp"/>

    <Button
        android:id="@+id/buttonNextPage"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/buttonLastPage"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="15dp"
        android:textSize="21sp"/>

    <Button
        android:id="@+id/buttonLastPage"
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="15dp"
        android:textSize="21sp"/>


</androidx.constraintlayout.widget.ConstraintLayout>